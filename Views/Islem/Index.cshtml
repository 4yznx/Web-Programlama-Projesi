@model IEnumerable<BarberShop.Models.Islem>

<div class="container">
    <h2>İşlem Listesi</h2>
    @if (TempData["msj"] != null)
    {
        <div class="alert alert-success">@TempData["msj"]</div>
    }
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>İşlem Adı</th>
                <th>Süre (dakika)</th>
                <th>Ücret</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var islem in Model)
            {
                <tr>
                    <td>@islem.Adi</td>
                    <td>@islem.Sure</td>
                    <td>@islem.Ucret ₺ </td>
                    <td>
                        <a href="@Url.Action("IslemDuzenle", "Islem", new { id = islem.IslemID })" class="btn btn-primary">Düzenle</a>
                        <a href="@Url.Action("IslemSil", "Islem", new { id = islem.IslemID })" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("IslemEkle", "Islem")" class="btn btn-success">Yeni İşlem Ekle</a>
</div>
