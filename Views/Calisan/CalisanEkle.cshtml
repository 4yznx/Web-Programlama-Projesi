@model BarberShop.Models.Calisan
@{
    ViewBag.Title = "Yeni Çalışan Ekle";
}

<div class="container">
    <h2>Yeni Çalışan Ekle</h2>
    <form asp-action="CalisanEkle" method="post">
        <div class="mb-3">
            <label for="Adi" class="form-label">Adı</label>
            <input type="text" class="form-control" id="Adi" name="Adi" required />
        </div>
        <div class="mb-3">
            <label for="Soyadi" class="form-label">Soyadı</label>
            <input type="text" class="form-control" id="Soyadi" name="Soyadi" required />
        </div>
        <div class="mb-3">
            <label for="Islemler" class="form-label">Uzmanlıklar</label>
            @foreach (var islem in ViewBag.Islemler as List<BarberShop.Models.Islem>)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="islem_@islem.IslemID" name="SelectedIslemIds" value="@islem.IslemID" />
                    <label class="form-check-label" for="islem_@islem.IslemID">@islem.Adi</label>
                </div>
            }
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>
