@model HairstyleChangerRequest

@{
    ViewData["Title"] = "Hairstyle Changer";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="text-primary">Hairstyle Changer</h2>
        <p class="text-muted">Upload an image to explore various hairstyles with AI!</p>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Error"]
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="ProcessImage" method="post" enctype="multipart/form-data" class="mt-3">
                <div class="mb-4">
                    <label for="image" class="form-label fw-bold">Choose an Image</label>
                    <input type="file" name="Image" id="image" class="form-control" accept="image/*" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Try Hairstyles</button>
            </form>
        </div>
    </div>

    @if (ViewData["EditedImages"] != null)
    {
        <div class="mt-5">
            <h3 class="text-center text-success mb-4">Your New Hairstyles</h3>
            <div class="row g-4">
                @foreach (var image in (List<string>)ViewData["EditedImages"])
                {
                    <div class="col-md-4 col-sm-6">
                        <div class="card">
                            <img src="data:image/jpeg;base64,@image" alt="Edited Hairstyle" class="card-img-top img-fluid rounded" />
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
