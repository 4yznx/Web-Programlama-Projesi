<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>

        .navbar {
            background: linear-gradient(to right, #ff0000, #8b0000);
            color: white;
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: 600;
            transition: all 0.3s;
        }

            .nav-link:hover, .nav-link.active {
                color: #ffc107 !important;
                text-decoration: none;
            }
        .container {
            padding-top: 20px;
        }

        main {
            background: none;
            border: none;
            padding: 20px 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">
                    <i class="fas fa-tools"></i> Admin Panel
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"] == "Calisan Ekle" ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="CalisanEkle">
                                <i class="fas fa-user-plus"></i> Çalışan Ekle
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"] == "Calisanlar" ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="CalisanListesi">
                                <i class="fas fa-users"></i> Çalışanlar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"] == "Islem Ekle" ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="IslemEkle">
                                <i class="fas fa-plus-circle"></i> İşlem Ekle
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"] == "Islemler" ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="IslemListesi">
                                <i class="fas fa-list-alt"></i> İşlemler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"] == "Kullanıcı Yönetimi" ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="ManageUsers">
                                <i class="fas fa-user-cog"></i> Kullanıcı Yönetimi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"] == "Kazançlar" ? "active" : "")" asp-area="" asp-controller="Admin" asp-action="CalisanKazanclari">
                                <i class="fas fa-coins"></i> Günlük Kazançlar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"] == "API" ? "active" : "")" asp-area="" asp-controller="ApiConsumer" asp-action="Index">
                                <i class="fas fa-plug"></i> API
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
