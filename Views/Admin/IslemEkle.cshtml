@model Islem

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Yeni İşlem Ekle";
}

<h2>Yeni İşlem Ekle</h2>

<form asp-action="IslemEkle" method="post">
    <div class="form-group">
        <label asp-for="Adi">İşlem Adı</label>
        <input asp-for="Adi" class="form-control"/>
        <span asp-validation-for="Adi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sure">Süre (dakika)</label>
        <input asp-for="Sure" class="form-control"/>
        <span asp-validation-for="Sure" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ucret">Ücret</label>
        <input asp-for="Ucret" class="form-control"/>
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Kaydet</button>
    <a asp-action="IslemListesi" class="btn btn-secondary mt-3">Geri Dön</a>
</form>
