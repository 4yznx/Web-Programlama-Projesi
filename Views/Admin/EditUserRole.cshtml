@using Microsoft.AspNetCore.Identity
@model RolSecici

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Rol Düzenle";
    var user = ViewBag.User as BarberShop.Models.Kullanici;
    var roles = ViewBag.Roles as List<IdentityRole>;
    var userRoles = ViewBag.UserRoles as List<string>;
}

<p>Lütfen <strong>@user.UserName</strong> adlı kullanıcının rolünü seçin.</p>

<form asp-action="EditUserRole" method="post">
    <input type="hidden" name="userId" value="@user.Id" />

    @foreach (var role in roles)
    {
        <div class="form-check">
            <input class="form-check-input"
                   type="radio"
                   name="selectedRole"
                   value="@role.Name"
            @(userRoles.Contains(role.Name) ? "checked" : "") />
            <label class="form-check-label">@role.Name</label>
        </div>
    }

    <button type="submit" class="btn btn-success mt-3">Kaydet</button>
    <a asp-action="ManageUsers" class="btn btn-secondary mt-3">Vazgeç</a>
</form>